<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_id_pasien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LATIHAN SQL LITE"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal= "true"
        android:layout_marginTop="15dp"
        android:background="#0000ff"/>

    <EditText
        android:id="@+id/editText_namaP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:background="#afffffff"
        android:layout_below="@id/text_id_pasien">
        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editText_alamatP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:background="#afffffff"
        android:layout_below="@id/editText_namaP">
        <requestFocus />
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

    </LinearLayout>

    <Button
        android:id="@+id/button_save_updateP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:layout_below="@+id/editText_alamatP"
        android:layout_alignLeft="@+id/text_id_pasien"
        android:layout_alignStart="@+id/text_id_pasien" />

    <Button
        android:id="@+id/button_cancel_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        android:layout_alignTop="@+id/button_save_updateP"
        android:layout_toRightOf="@+id/button_save_updateP"
        android:layout_toEndOf="@+id/button_save_updateP" />

</RelativeLayout>
